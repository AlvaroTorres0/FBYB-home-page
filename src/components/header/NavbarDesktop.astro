---
interface Props {
  isLanding: boolean;
}

const { isLanding } = Astro.props;

const navItems = [
  { id: 'home-section', label: 'Home' },
  { id: 'why-dubai-section', label: 'Why Dubai?' },
  { id: 'whats-included-section', label: "What's Included?" },
  { id: 'how-section', label: 'How It Works' },
  { id: 'why-us-section', label: 'Why Us?' },
  { id: 'book-section', label: 'Book Now' },
];

const generateLink = (id: string) => (isLanding ? `#${id}` : `index.html#${id}`);
---

<header class="hidden text-black justify-center items-center md:flex fixed max-w-full z-50 bg-[#FFFFFF] w-full shadow-[0px_10px_50px_-30px_#00000024]">
  <nav class="flex w-full justify-between items-center rounded-xl mx-6 md:px-8 lg:px-0 lg:mx-3 h-[80px] lg:w-[1200px] xl:w-[1400px] bg-[#FFFFFF]">
    <a href={isLanding ? '#home-section' : 'index.html'}>
      <img class="object-contain w-[120px] h-[120px] xl:w-[130px] xl:h-[130px] shrink-0" src="/public/assets/navbar/logo.png" alt="Logo" title="Fly Before You Buy" />
    </a>

    <ul class="flex gap-6">
      {
        navItems.map(({ id, label }) => (
          <li class="flex items-center gap-4 px-4 py-0.5 border-[1px] border-[#00234844] nav-item">
            <a id-nav={id} href={generateLink(id)} class="text-lg font-light text-blueBg">
              {label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  .active {
    color: #002348;
    font-weight: bolder;
  }
</style>

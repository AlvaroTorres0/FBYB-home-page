---
import Layout from '../layouts/Layout.astro';
import NavbarMobile from '../components/header/NavbarMobile';
import Home from '../sections/AboutPage/Home.astro';
import Mission from '../sections/AboutPage/Mission.astro';
import CoreValues from '../sections/AboutPage/CoreValues.astro';
import Experts from '../sections/AboutPage/Experts/Experts.astro';
import RegisterForm from '../sections/AboutPage/RegisterForm/RegisterForm.astro';
import SecondaryNavbar from '../components/header/SecondaryNavbar.astro';
---

<Layout title="">
  <!-- ? navbar mobile -->
  <NavbarMobile isLanding={true} client:load />

  <!-- ? Header section desktop-->
  <SecondaryNavbar isLanding={true} />

  <main class="flex flex-col gap-[128px]">
    <Home />
    <Mission />
    <CoreValues />
    <Experts />
    <RegisterForm />
  </main>
</Layout>

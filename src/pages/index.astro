---
import Layout from '../layouts/Layout.astro';
import NavbarMobile from '../components/header/NavbarMobile.astro';
import NavbarDesktop from '../components/header/NavbarDesktop.astro';

import Home from '../sections/HomePage/Home.astro';
import QualityService from '../sections/HomePage/QualityService.astro';
import TourService from '../sections/HomePage/TourService.astro';
import TopLocations from '../sections/HomePage/TopLocations/TopLocations.astro';
import OffPlan from '../sections/HomePage/OffPlan.astro';
import PropertyInsight from '../sections/HomePage/PropertyInsight/PropertyInsight.astro';
import TestimonialsSection from '../sections/HomePage/Testimonials/TestimonialsSection.astro';
---

<Layout title="">
  <!-- ? navbar mobile -->
  <NavbarMobile isLanding={true} />

  <!-- ? Header section desktop-->
  <NavbarDesktop isLanding={true} />

  <main class="flex flex-col gap-8 md:gap-10 lg:gap-12">
    <Home />
    <QualityService />
    <TourService />
    <TopLocations />
    <OffPlan />
    <PropertyInsight />
    <TestimonialsSection isIndexSection />
  </main>
</Layout>
